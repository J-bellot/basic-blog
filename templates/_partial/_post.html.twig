<div class="card my-5">
    <a href="{{ path('post_detail', parameters = {id: post.id}) }}">
        <div class="card-title">{{ post.user }}</div>
        <div class="card-body">{{ post.content }}</div>
    </a>
    {% if (app.user) %}
        <button class="like btn btn-primary" data-userId="{{ app.user.id }}" data-postId="{{ post.id }}" data-action="like">{{ post.likes|length }} Like</button>
        <button class="dislike btn btn-secondary" data-userId="{{ app.user.id }}" data-postId="{{ post.id }}" data-action="dislike">{{ post.dislikes|length }} Dislike</button>
    {% else %}
        <a class="btn btn-primary" href="{{ path('app_login') }}">Like</a>
        <a class="btn btn-secondary" href="{{ path('app_login') }}">Dislike</a>
    {% endif %}
</div>